{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "plugins": ["promise", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2016
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["error", "never"]
  }
}
