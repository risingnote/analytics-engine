def receive_from_client(cls,
                        n,
                        client_id,
                        message_type=ClientMessageType.NoType,
                        encrypt=True):
    """ Securely obtain shares of n values input by a client """
    # send shares of a triple to client
    triples = list(
        itertools.chain(*(sint.get_random_triple() for i in range(n))))
    sint.write_shares_to_socket(client_id, triples, message_type, encrypt)

    received = cint.read_from_socket(client_id, n)
    y = [0] * n
    for i in range(n):
        y[i] = received[i] - triples[i * 3]
    return y
